<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/lvModality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="@string/modality"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox" />


            <TextView
                android:id="@+id/lvCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/course"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox"/>

            <TextView
                android:id="@+id/lvHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hours"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:textColor="@color/teal_700"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/lvCourseModality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="@string/day"
                android:textSize="15sp"
                android:textColor="@color/teal_200"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox"/>


            <TextView
                android:id="@+id/lvCourseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/smr1"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textSize="15sp"
                android:textColor="@color/teal_200"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox"/>

            <TextView
                android:id="@+id/lvCourseHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_990"
                android:gravity="center"
                android:padding="2.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textSize="15sp"
                android:textColor="@color/teal_200"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/black"
                android:background="@drawable/simplebox"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>